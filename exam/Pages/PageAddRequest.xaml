<Page x:Class="exam.Pages.PageAddRequest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:exam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="PageAddRequest">

    <Grid>
        <StackPanel Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="BtnBack" Click="BtnBack_Click" Content="Назад" HorizontalAlignment="Right"/>
            <StackPanel>
                <TextBlock>Тип оборудования:</TextBlock>
                <ComboBox Name="CmbClimateTechType"></ComboBox>
            </StackPanel>
            <StackPanel>
                <TextBlock>Название модели:</TextBlock>
                <TextBox Name="TxbClimateTechModel"></TextBox>
            </StackPanel>
            <StackPanel>
                <TextBlock>Описание проблемы:</TextBlock>
                <TextBox Name="TxbProblemDescription"></TextBox>
            </StackPanel>
            <Button Name="BtnAddRequest" Click="BtnAddRequest_Click" Margin="0,10,0,0">Создать</Button>
        </StackPanel>
    </Grid>
</Page>
